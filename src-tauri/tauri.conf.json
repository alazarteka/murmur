{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Murmur",
  "version": "0.1.0",
  "identifier": "com.alazar.murmur",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://127.0.0.1:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Murmur",
        "width": 410,
        "height": 620,
        "minWidth": 410,
        "minHeight": 620,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "fullscreen": false,
        "hiddenTitle": true,
        "titleBarStyle": "Transparent",
        "acceptFirstMouse": true,
        "visible": false,
        "alwaysOnTop": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: data: blob:; connect-src 'self' ipc: http://ipc.localhost ws://127.0.0.1:5173 http://127.0.0.1:5173; font-src 'self' data:"
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://github.com/alazarteka/murmur/releases/download/main-latest/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEMyNUI1OUY1Qzc4NzlGQ0EKUldUS240Zkg5Vmxid2w0b0lRWCtkUDhjR1BadDRtT2g4VG1BS0ZwN21OSVh6L3R3MGlNcWdxRXYK"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ],
    "macOS": {
      "infoPlist": "Info.plist"
    }
  }
}
